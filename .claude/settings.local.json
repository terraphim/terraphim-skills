{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "WebFetch(domain:opencode.ai)",
      "Bash(terraphim-agent:*)",
      "Bash(gh release:*)",
      "Bash(~/.cargo/bin/terraphim-agent hook:*)",
      "WebSearch",
      "Bash(find:*)",
      "Bash(git -C /home/alex/projects/terraphim/terraphim-skills log -p --all -S \"error\\\\|Error\\\\|ERROR\" -- \"*.json\" \"*.md\")",
      "Bash(head:*)",
      "Bash(tmux new-session:*)",
      "Bash(tmux capture-pane:*)",
      "WebFetch(domain:github.com)",
      "Bash(gh issue:*)",
      "mcp__cachebro__read_files",
      "Bash(sort:*)",
      "Bash(grep:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre_tool_use.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post_tool_use.sh"
          }
        ]
      }
    ]
  }
}
