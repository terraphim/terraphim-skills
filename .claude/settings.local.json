{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "WebFetch(domain:opencode.ai)",
      "Bash(terraphim-agent:*)",
      "Bash(gh release:*)",
      "Bash(~/.cargo/bin/terraphim-agent hook:*)",
      "WebSearch",
      "WebFetch(domain:diataxis.fr)",
      "Bash(xargs -I {} sh -c 'echo \"\"=== {} ===\"\" && head -10 {}')",
      "Bash(xargs -I {} sh -c 'echo \"\"=== {} ===\"\" && head -4 {}')",
      "Bash(ls:*)",
      "Bash(echo:*)",
      "Bash(bun:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre_tool_use.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post_tool_use.sh"
          }
        ]
      }
    ]
  }
}