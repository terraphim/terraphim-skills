{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "WebFetch(domain:opencode.ai)",
      "Bash(terraphim-agent:*)",
      "Bash(gh release:*)",
      "Bash(~/.cargo/bin/terraphim-agent hook:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre_tool_use.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post_tool_use.sh"
          }
        ]
      }
    ]
  }
}
